{
    "version": 2,
    "builds": [
        {
            "src": "complaint-sys/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://complaint-system-backend-production.up.railway.app/api/$1"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/complaint-sys/assets/$1"
        },
        {
            "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico)",
            "destination": "/complaint-sys/$1.$2"
        },
        {
            "source": "/(.*)",
            "destination": "/complaint-sys/index.html"
        }
    ]
}